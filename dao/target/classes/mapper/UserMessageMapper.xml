<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lld360.cnc.repository.UserMessageDao">

    <!-- 定义全局查询的SQL变量语句 -->
    <sql id="searchCondition">
        <where>
            <if test="userId != null">user_id = #{userId}</if>
            <if test="type != null">type = #{type}</if>
            <if test="objectId != null">object_id = #{objectId}</if>
            <if test="title != null">title like "%"#{title}"%"</if>
            <if test="message != null">message like "%"#{message}"%"</if>
            <if test="createTime != null">create_time = #{createTime}</if>
            <if test="isRead != null">is_read = #{isRead}</if>
        </where>
    </sql>
    <!-- 用于select查询公用抽取的列 -->
    <sql id="columns">
	    <![CDATA[
        id,
        user_id,
        type,
        object_id,
        title,
        message,
        create_time,
        is_read
        ]]>
	</sql>

    <select id="search" parameterType="map" resultMap="usermessageMap">
        SELECT
        <include refid="columns"/>
        FROM user_message
        <include refid="searchCondition"/>
        ORDER BY create_time DESC
        <if test="limit != null">LIMIT #{limit}</if>
        <if test="offset != null">OFFSET #{offset}</if>
    </select>

    <select id="count" parameterType="map" resultType="long">
        SELECT count(1)
        FROM user_message
        <include refid="searchCondition"/>
    </select>

    <select id="find" parameterType="long" resultMap="usermessageMap">
        SELECT
        <include refid="columns"/>
        FROM user_message
        WHERE id = #{id}
    </select>

    <select id="countNoReadByUser" parameterType="long" resultType="java.lang.Long">
        SELECT COUNT(1)
        FROM user_message
        WHERE user_id = #{userId} AND is_read = 0
    </select>

    <insert id="create" parameterType="com.lld360.cnc.model.UserMessage" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO
            user_message (
                user_id,
                type,
                object_id,
                title,
                message,
                create_time,
                is_read
            ) VALUES (
            #{userId},
            #{type},
            #{objectId},
            #{title},
            #{message},
            #{createTime},
            #{isRead}
        )
    </insert>

    <update id="update" parameterType="com.lld360.cnc.model.UserMessage">
        UPDATE user_message
        <set>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="type != null">type = #{type},</if>
            <if test="objectId != null">object_id = #{objectId},</if>
            <if test="title != null">title = #{title},</if>
            <if test="message != null">message = #{message},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="isRead != null">is_read = #{isRead},</if>
        </set>
        WHERE id = #{id};
    </update>

    <update id="updateRead" parameterType="long">
        UPDATE user_message
        SET is_read = 1
        WHERE id = #{id}
    </update>

    <update id="updateReadByUser" parameterType="long">
        UPDATE user_message
        SET is_read = 1
        WHERE user_id = #{userId} AND is_read = 0
    </update>

    <delete id="delete" parameterType="long">
        DELETE FROM user_message
        WHERE id = #{id}
    </delete>


    <!-- 结果集mapper -->
    <resultMap id="usermessageMap" type="com.lld360.cnc.model.UserMessage">
        <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="type" column="type"/>
        <result property="objectId" column="object_id"/>
        <result property="title" column="title"/>
        <result property="message" column="message"/>
        <result property="createTime" column="create_time"/>
        <result property="isRead" column="is_read"/>
    </resultMap>

</mapper> 
