<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lld360.cnc.repository.InviteCardDao">

    <!-- 用于select查询公用抽取的列 -->
    <sql id="columns">
        <![CDATA[
          `id`,
          `type`,
          `object_id`,
          `invite_code`,
          `state`,
          `user_id`,
          `create_time`,
          `update_time`
        ]]>
    </sql>

    <insert id="create" parameterType="com.lld360.cnc.model.InviteCard">
        INSERT INTO `invite_card` (
          `type`,
          `object_id`,
          `invite_code`,
          `state`,
          `user_id`,
          `update_time`
        )VALUES(
           #{type},
           #{objectId},
           #{inviteCode},
           #{state},
           #{userId},
           #{updateTime}
        ) ;
    </insert>

    <update id="update" parameterType="com.lld360.cnc.model.InviteCard">
        UPDATE `invite_card`
        <set>
            <if test="state != null">`state` = #{state},</if>
            <if test="userId != null">`user_id` = #{userId},</if>
            <if test="updateTime != null">`update_time` = #{updateTime},</if>
        </set>
        WHERE `id` = #{id};
    </update>

    <delete id="delete" parameterType="long">
        DELETE FROM `invite_card`
        WHERE `id` = #{id};
    </delete>

    <select id="getByCode" parameterType="string" resultMap="inviteCardDtoMap">
        SELECT
          i.*,
          (
            CASE
              i.`type`
              WHEN 1 THEN v.`name`
              WHEN 2 THEN d.`title`
              WHEN 3 THEN s.`title`
              WHEN 4 THEN '会员卡'
              ELSE '其他'
            END
          ) AS objectName,
          (
            CASE
              i.`type`
              WHEN 1 THEN v.`cost_score`
              WHEN 2 THEN d.`cost_score`
              WHEN 3 THEN d.`cost_score`
              WHEN 4 THEN 1000
              ELSE 0
            END
          ) AS cost_score
        FROM `invite_card` i
        LEFT JOIN `vod_volumes` v ON i.`object_id` = v.`id` AND i.`type` = 1
        LEFT JOIN `doc` d ON i.`object_id` = d.`id` AND i.`type` = 2
        LEFT JOIN `soft_upload` s ON i.`object_id` = s.`uuid` AND i.`type` = 3
        WHERE `invite_code` = #{inviteCode}
    </select>

    <sql id="searchCondition">
        <where>
            <if test="type != null and type != 0">AND i.type = #{type}</if>
            <if test="state != null and state != 0">AND i.state = #{state}</if>
            <if test="key != null and key != ''">AND (v.`name` REGEXP #{key} OR d.`title` REGEXP #{key} OR s.`title` REGEXP #{key})</if>
        </where>
    </sql>

    <select id="inviteCardList" parameterType="map" resultMap="inviteCardDtoMap">
        SELECT
            i.*,
            (
            CASE i.`type`
              WHEN 1 THEN '视频集'
              WHEN 2 THEN '文档'
              WHEN 3 THEN '软件'
              ELSE '其他'
            END
            ) AS typeName,
            (
            CASE
              i.`type`
              WHEN 1 THEN v.`name`
              WHEN 2 THEN d.`title`
              WHEN 3 THEN s.`title`
              ELSE '其他'
            END
          ) AS objectName,
          IFNULL(u.`nickname`, u.`name`) AS userName
        FROM `invite_card` i
        LEFT JOIN `vod_volumes` v ON i.`object_id` = v.`id` AND i.`type` = 1
        LEFT JOIN `doc` d ON i.`object_id` = d.`id` AND i.`type` = 2
        LEFT JOIN `soft_upload` s ON i.`object_id` = s.`uuid` AND i.`type` = 3
        LEFT JOIN `user` u ON i.`user_id` = u.`id`
        <include refid="searchCondition"/>
        <if test="limit != null">LIMIT #{limit}</if>
        <if test="offset != null">OFFSET #{offset}</if>
    </select>

    <select id="count" parameterType="map" resultType="long">
        SELECT COUNT(1)
        FROM `invite_card` i
        LEFT JOIN `vod_volumes` v ON i.`object_id` = v.`id` AND i.`type` = 1
        LEFT JOIN `doc` d ON i.`object_id` = d.`id` AND i.`type` = 2
        LEFT JOIN `soft_upload` s ON i.`object_id` = s.`uuid` AND i.`type` = 3
        LEFT JOIN `user` u ON i.`user_id` = u.`id`
        <include refid="searchCondition"/>
    </select>

    <!-- 结果集mapper -->
    <resultMap id="inviteCardMap" type="com.lld360.cnc.model.InviteCard">
        <result property="id" column="id"/>
        <result property="type" column="type"/>
        <result property="objectId" column="object_id"/>
        <result property="inviteCode" column="invite_code"/>
        <result property="state" column="content"/>
        <result property="userId" column="user_id"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <resultMap id="inviteCardDtoMap" extends="inviteCardMap" type="com.lld360.cnc.dto.InviteCardDto">
        <result property="typeName" column="typeName"/>
        <result property="objectName" column="objectName"/>
        <result property="userName" column="userName"/>
        <result property="costScore" column="cost_score"/>
    </resultMap>

</mapper>