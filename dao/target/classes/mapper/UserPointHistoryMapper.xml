<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lld360.cnc.repository.UserPointHistoryDao">

    <sql id="searchCondition">
        <where>
            <if test="userId != null">AND ph.user_id = #{userId}</if>
            <if test="type != null">AND ph.`type` = #{type}</if>
            <if test="scoreChange != null">AND ph.score_change = #{scoreChange}</if>
            <if test="objectId != null">AND ph.object_id = #{objectId}</if>
            <if test="description != null">AND ph.description LIKE "%"#{description}"%"</if>
            <if test="key != null">AND (ph.description LIKE "%"#{key}"%" OR u.`nickname` LIKE "%"#{key}"%")</if>
        </where>
    </sql>

    <sql id="columns">
        ph.id,
        ph.user_id userId,
        ph.`type`,
        ph.point_change pointChange,
        ph.object_id objectId,
        ph.description,
        ph.create_time createTime
    </sql>

    <select id="search" parameterType="map" resultType="com.lld360.cnc.model.UserPointHistory">
        SELECT
        <include refid="columns"/>, u.`nickname` userNickname
        FROM `user_point_history` ph
        LEFT JOIN `user` u ON u.`id` = ph.`user_id`
        <include refid="searchCondition"/>
        ORDER BY <if test="sortBy != null and sortBy !=''">#{sortBy} #{sortType},</if> ph.create_time DESC
        <if test="limit != null and offset != null">LIMIT #{limit} OFFSET #{offset}</if>
    </select>

    <select id="count" parameterType="map" resultType="long">
        SELECT COUNT(1)
        FROM `user_point_history` ph
        LEFT JOIN `user` u ON u.`id` = ph.`user_id`
        <include refid="searchCondition"/>
    </select>

    <select id="find" parameterType="long" resultType="com.lld360.cnc.model.UserPointHistory">
        SELECT
        <include refid="columns"/>
        FROM `user_point_history` ph
        LEFT JOIN `user` u ON u.`id` = ph.`user_id`
        WHERE id = #{id}
    </select>

    <insert id="create" parameterType="com.lld360.cnc.model.UserPointHistory" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO `user_point_history` (
            user_id,
            `type`,
            point_change,
            object_id,
            description,
            create_time
        ) VALUES (
            #{userId},
            #{type},
            #{pointChange},
            #{objectId},
            #{description},
            #{createTime}
        )
    </insert>

    <update id="update" parameterType="com.lld360.cnc.model.UserPointHistory">
        UPDATE `user_point_history`
        <set>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="type != null">`type` = #{type},</if>
            <if test="scoreChange != null">point_change = #{pointChange},</if>
            <if test="objectId != null">object_id = #{objectId},</if>
            <if test="description != null">description = #{description},</if>
        </set>
        WHERE id = #{id};
    </update>

    <delete id="delete" parameterType="long">
        DELETE FROM `user_point_history`
        WHERE id = #{id}
    </delete>
</mapper>