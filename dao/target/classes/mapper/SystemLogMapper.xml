<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lld360.cnc.repository.SystemLogDao">
    <insert id="create" parameterType="SystemLog" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO
        system_log (
        url, params, platform, occur_time, message, detail
        ) VALUES (
        #{url},
        #{params},
        #{platform},
        #{occurTime},
        #{message},
        #{detail}
        )
    </insert>

    <update id="update" parameterType="SystemLog">
        UPDATE system_log
        <set>
            <if test="url != null">url = #{url},</if>
            <if test="params != null">params = #{params},</if>
            <if test="platform != null">platform = #{platform},</if>
            <if test="occurTime != null">occur_time = #{occurTime},</if>
            <if test="message != null">message = #{message},</if>
            <if test="detail != null">detail = #{detail}</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="long">
        DELETE FROM system_log
        WHERE id = #{id}
    </delete>

    <delete id="deleteSome">
        DELETE FROM system_log
        WHERE id IN
        <foreach collection="array" item="id"  open="(" separator="," close=")">#{id}</foreach>
    </delete>

    <sql id="columns">
        id, url, params, platform, occur_time AS occurTime, message, detail
    </sql>

    <sql id="searchCondition">
        <where>
            <if test="st != null">AND occur_time &gt; #{st}</if>
            <if test="et != null">AND occur_time &lt; #{et}</if>
            <if test="m != null">AND message LIKE "%"#{m}"%"</if>
            <if test="p != null">AND platform = #{p}</if>
        </where>
    </sql>

    <select id="find" resultType="com.lld360.cnc.model.SystemLog" parameterType="long">
        SELECT
        <include refid="columns"/>
        FROM system_log
        WHERE id = #{id}
    </select>

    <select id="count" parameterType="map" resultType="long">
        SELECT COUNT(1) FROM system_log
        <include refid="searchCondition"/>
    </select>

    <select id="findList" parameterType="map" resultType="com.lld360.cnc.model.SystemLog">
        SELECT
        <include refid="columns"/>
        FROM system_log
        <include refid="searchCondition"/>
        ORDER BY occur_time DESC
        <if test="limit != null">LIMIT ${limit}</if>
        <if test="offset != null">OFFSET ${offset}</if>
    </select>

</mapper>
