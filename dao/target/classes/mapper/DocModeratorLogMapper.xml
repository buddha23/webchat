<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lld360.cnc.repository.DocModeratorLogDao">

    <!-- 定义全局查询的SQL变量语句 -->
    <sql id="searchCondition">
        <where>
            <if test="moderatorId != null">AND l.moderator_id = #{moderatorId}</if>
            <if test="type != null">AND l.type = #{type}</if>
            <if test="key != null">AND u.nickname LIKE "%"#{key}"%" OR l.content LIKE "%"#{key}"%"</if>
            <if test="objectId != null">AND l.object_id = #{objectId}</if>
            <if test="content != null">AND l.content LIKE "%"#{content}"%"</if>
        </where>
    </sql>
    <!-- 用于select查询公用抽取的列 -->
    <sql id="columns">
	    <![CDATA[
        l.id,
        l.moderator_id,
        l.type,
        l.object_id,
        l.content,
        l.create_time
        ]]>
	</sql>

    <select id="search" parameterType="map" resultType="com.lld360.cnc.dto.ModeratorLogDto">
        SELECT
        <include refid="columns"/>,
        u.nickname AS moderatorName
        FROM moderator_log l
        LEFT JOIN `user` u ON l.moderator_id=u.id
        <include refid="searchCondition"/>
        ORDER BY l.create_time DESC
        <if test="limit != null">LIMIT #{limit}</if>
        <if test="offset != null">OFFSET #{offset}</if>
    </select>

    <select id="count" parameterType="map" resultType="long">
        SELECT count(1)
        FROM moderator_log l
        LEFT JOIN `user` u ON l.moderator_id=u.id
        <include refid="searchCondition"/>
    </select>

    <select id="find" parameterType="long" resultType="com.lld360.cnc.dto.ModeratorLogDto">
        SELECT
        <include refid="columns"/>
        FROM moderator_log l
        JOIN `user` u ON l.moderator_id=u.id
        WHERE l.id = #{id}
    </select>

    <insert id="create" parameterType="com.lld360.cnc.model.ModeratorLog" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO
            moderator_log (
                moderator_id,
                `type`,
                object_id,
                content,
                create_time
            ) VALUES (
            #{moderatorId},
            #{type},
            #{objectId},
            #{content},
            #{createTime}
        )
    </insert>

    <update id="update" parameterType="com.lld360.cnc.model.ModeratorLog">
        UPDATE moderator_log
        <set>
            <if test="moderatorId != null">moderator_id = #{moderatorId},</if>
            <if test="type != null">type = #{type},</if>
            <if test="objectId != null">object_id = #{objectId},</if>
            <if test="content != null">content = #{content},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </set>
        WHERE id = #{id};
    </update>

    <delete id="delete" parameterType="long">
        DELETE FROM moderator_log
        WHERE id = #{id}
    </delete>


    <!-- 结果集mapper -->
    <resultMap id="moderatorlogMap" type="com.lld360.cnc.model.ModeratorLog">
        <result property="id" column="id"/>
        <result property="moderatorId" column="moderator_id"/>
        <result property="type" column="type"/>
        <result property="objectId" column="object_id"/>
        <result property="content" column="content"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

</mapper> 
