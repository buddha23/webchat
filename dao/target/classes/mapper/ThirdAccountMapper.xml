<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lld360.cnc.repository.ThirdAccountDao">

    <!-- 定义全局查询的SQL变量语句 -->
    <sql id="searchCondition">
        <where>
            <if test="userId != null">AND user_id = #{userId}</if>
            <if test="openid != null">AND openid like "%"#{openid}"%"</if>
            <if test="unionid != null">AND unionid like "%"#{unionid}"%"</if>
            <if test="type != null">AND type = #{type}</if>
            <if test="nickname != null">AND nickname like "%"#{nickname}"%"</if>
            <if test="icon != null">AND icon like "%"#{icon}"%"</if>
            <if test="gender != null">AND gender = #{gender}</if>
            <if test="age != null">AND age = #{age}</if>
            <if test="province != null">AND province like "%"#{province}"%"</if>
            <if test="city != null">AND city like "%"#{city}"%"</if>
            <if test="accessToken != null">AND access_token like "%"#{accessToken}"%"</if>
            <if test="refreshToken != null">AND refresh_token like "%"#{refreshToken}"%"</if>
            <if test="expiresIn != null">AND expires_in like "%"#{expiresIn}"%"</if>
            <if test="updateTime != null">AND update_time like "%" #{updateTime},</if>
            <if test="createTime != null">AND create_time like "%" #{createTime},</if>
        </where>
    </sql>
    <!-- 用于select查询公用抽取的列 -->
    <sql id="columns">
	    <![CDATA[
        id ,
        user_id,
        openid,
        unionid,
        `type`,
        nickname ,
        icon,
        gender,
        age,
        province,
        city ,
        access_token,
        refresh_token,
        expires_in,
        create_time,
        update_time
        ]]>
	</sql>

    <select id="search" parameterType="map" resultMap="thirdaccountMap">
        SELECT
        <include refid="columns"/>
        FROM third_account
        <include refid="searchCondition"/>
        <if test="limit != null">LIMIT #{limit}</if>
        <if test="offset != null">OFFSET #{offset}</if>
    </select>

    <select id="count" parameterType="map" resultType="long">
        SELECT count(1)
        FROM third_account
        <include refid="searchCondition"/>
    </select>

    <select id="find" parameterType="long" resultMap="thirdaccountMap">
        SELECT
        <include refid="columns"/>
        FROM third_account
        WHERE id = #{id}
    </select>

    <select id="findByOpenidCount" parameterType="String" resultType="long">
        SELECT count(1)
        FROM third_account
        WHERE openid = #{openid}
    </select>

    <select id="findByOpenid" parameterType="String" resultMap="thirdaccountMap">
        SELECT  *
        FROM third_account
        WHERE openid = #{openid}
    </select>

    <insert id="create" parameterType="com.lld360.cnc.model.ThirdAccount" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO
            third_account (
                user_id,
                openid,
                unionid,
                `type`,
                nickname,
                icon,
                gender,
                age,
                province,
                city,
                access_token,
                refresh_token,
                expires_in,
                create_time,
                update_time
            ) VALUES (
            #{userId},
            #{openid},
            #{unionid},
            #{type},
            #{nickname},
            #{icon},
            #{gender},
            #{age},
            #{province},
            #{city},
            #{accessToken},
            #{refreshToken},
            #{expiresIn},
            #{createTime},
            #{updateTime}
        )
    </insert>

    <update id="update" parameterType="com.lld360.cnc.model.ThirdAccount">
        UPDATE third_account
        <set>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="openid != null">openid = #{openid},</if>
            <if test="unionid != null">unionid = #{unionid},</if>
            <if test="type != null">type = #{type},</if>
            <if test="nickname != null">nickname = #{nickname},</if>
            <if test="icon != null">icon = #{icon},</if>
            <if test="gender != null">gender = #{gender},</if>
            <if test="age != null">age = #{age},</if>
            <if test="province != null">province = #{province},</if>
            <if test="city != null">city = #{city},</if>
            <if test="accessToken != null">access_token = #{accessToken},</if>
            <if test="refreshToken != null">refresh_token = #{refreshToken},</if>
            <if test="expiresIn != null">expires_in = #{expiresIn},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </set>
        WHERE id = #{id};
    </update>

    <update id="updateThirUser">
        UPDATE third_account
        SET user_id = #{0}
        WHERE user_id = #{1}
    </update>

    <update id="relieveBind" parameterType="com.lld360.cnc.model.ThirdAccount">
        UPDATE third_account
        SET user_id = NULL
        WHERE id = #{id};
    </update>

    <delete id="delete" parameterType="long">
        DELETE FROM third_account
        WHERE id = #{id}
    </delete>

    <select id="searchWxAccountByMobile" parameterType="string" resultMap="thirdaccountMap">
        SELECT t.*
        FROM `third_account` t
        LEFT JOIN `user` u ON t.`user_id` = u.`id`
        WHERE t.`type` = 2
        AND t.`unionid` IS NOT NULL
        AND u.`mobile` = #{mobile}
        ORDER BY t.`create_time` DESC
    </select>

    <select id="getVodBuyThirdaccount" parameterType="int" resultMap="thirdaccountMap">
        SELECT
          t.*
        FROM
          `third_account` t
        WHERE t.`user_id` IN
          (SELECT DISTINCT
            vb.`user_id`
          FROM
            `vod_buys` vb
          WHERE vb.`volume_id` = #{volumeId})
          AND t.`type` = 2
    </select>

    <select id="isBindThirdAccount"  resultType="long">
        SELECT count(1)
        FROM third_account
        WHERE user_id = #{0} and `type`=#{1}
    </select>

    <!-- 结果集mapper -->
    <resultMap id="thirdaccountMap" type="com.lld360.cnc.model.ThirdAccount">
        <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="openid" column="openid"/>
        <result property="unionid" column="unionid"/>
        <result property="type" column="type"/>
        <result property="nickname" column="nickname"/>
        <result property="icon" column="icon"/>
        <result property="gender" column="gender"/>
        <result property="age" column="age"/>
        <result property="province" column="province"/>
        <result property="city" column="city"/>
        <result property="accessToken" column="access_token"/>
        <result property="refreshToken" column="refresh_token"/>
        <result property="expiresIn" column="expires_in"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

</mapper> 
