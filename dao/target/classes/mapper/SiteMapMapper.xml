<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lld360.cnc.repository.SiteMapDao">

    <select id="findDoc" resultType="com.lld360.cnc.model.Doc">
        SELECT id,create_time
        FROM doc
        order by id
    </select>

    <select id="findDocCategory" resultType="com.lld360.cnc.model.DocCategory">
        SELECT id
        FROM doc_category
        where fid is NULL
        ORDER by id
    </select>

    <select id="findCourse" resultType="com.lld360.cnc.model.Course">
        SELECT id,publish_time
        FROM  course
        ORDER BY id
    </select>

    <select id="findPosts" resultType="com.lld360.cnc.model.Posts">
        SELECT id,create_time
        FROM posts
        ORDER BY id
    </select>
</mapper>