<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lld360.cnc.repository.PostsCommentDao">

    <!-- 定义全局查询的SQL变量语句 -->
    <sql id="searchCondition">
        <where>
            <if test="userId != null">AND user_id = #{userId}</if>
            <if test="postsId != null">AND posts_id = #{postsId}</if>
            <if test="content != null">AND content like "%"#{content}"%"</if>
            <if test="createTime != null">AND pc.create_time &gt; #{createTime}</if>
            <if test="state != null">AND pc.state = #{state}</if>
            <if test="searchTime != null">AND DATE(create_time) = DATE(#{searchTime})</if>
        </where>
    </sql>
    <!-- 用于select查询公用抽取的列 -->
    <sql id="columns">
	    <![CDATA[
        pc.id ,
        pc.user_id,
        pc.posts_id,
        pc.content,
        pc.create_time,
        pc.state
        ]]>
	</sql>

    <select id="search" parameterType="map" resultMap="postscommentMap">
        SELECT
        <include refid="columns"/>,
        IFNULL(u.`nickname`, u.name) AS userNickname,
        u.avatar userAvatar,
        IFNULL(COUNT(cl.`user_id`), 0) AS likeNum
        <if test="currentUserId != null">,IFNULL(l.`user_id`, 0) > 0 AS hasLike</if>
        FROM posts_comment pc
        LEFT JOIN user u ON user_id = u.id
        LEFT JOIN `posts_comment_like` cl ON cl.`comment_id` = pc.`id`
        <if test="currentUserId != null">LEFT JOIN `posts_comment_like` l ON l.`comment_id` = pc.`id` AND l.`user_id` = #{currentUserId}</if>
        <include refid="searchCondition"/>
        GROUP BY pc.`id`
        ORDER BY pc.`create_time` DESC
        <if test="limit != null">LIMIT #{limit}</if>
        <if test="offset != null">OFFSET #{offset}</if>
    </select>

    <select id="count" parameterType="map" resultType="long">
        SELECT count(1)
        FROM posts_comment pc
        <include refid="searchCondition"/>
    </select>

    <select id="find" parameterType="long" resultMap="postscommentMap">
        SELECT
        <include refid="columns"/>,
        IFNULL(u.`nickname`, u.name) AS userNickname,
        u.avatar userAvatar
        FROM posts_comment pc
        LEFT JOIN user u ON user_id = u.id
        WHERE pc.id = #{id}
    </select>

    <insert id="create" parameterType="com.lld360.cnc.model.PostsComment" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO
            posts_comment (
                user_id,
                posts_id,
                content,
                create_time,
                state
            ) VALUES (
            #{userId},
            #{postsId},
            #{content},
            #{createTime},
            #{state}
        )
    </insert>

    <update id="update" parameterType="com.lld360.cnc.model.PostsComment">
        UPDATE posts_comment
        <set>
            <if test="userId != null">AND user_id = #{userId},</if>
            <if test="postsId != null">AND posts_id = #{postsId},</if>
            <if test="content != null">AND content = #{content},</if>
            <if test="createTime != null">AND create_time = #{createTime},</if>
            <if test="state != null">AND state = #{state},</if>
        </set>
        WHERE id = #{id};
    </update>

    <delete id="delete" parameterType="long">
        DELETE FROM posts_comment
        WHERE id = #{id}
    </delete>

    <!-- 结果集mapper -->
    <resultMap id="postscommentMap" type="com.lld360.cnc.dto.PostsCommentDto">
        <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="postsId" column="posts_id"/>
        <result property="content" column="content"/>
        <result property="createTime" column="create_time"/>
        <result property="state" column="state"/>
        <result property="userNickname" column="userNickname"/>
        <result property="userAvatar" column="userAvatar"/>
        <result property="likeNum" column="likeNum"/>
        <result property="hasLike" column="hasLike"/>
    </resultMap>

</mapper> 
