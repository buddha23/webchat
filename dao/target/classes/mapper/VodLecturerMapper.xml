<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lld360.cnc.repository.VodLecturerDao">

    <sql id="colums">

    </sql>

    <insert id="create" parameterType="com.lld360.cnc.model.VodLecturer">
        INSERT INTO `vod_lecturer` (
          `user_id`,
          `creater`,
          `state`,
          `create_time`
        ) 
        VALUES
          (
            #{userId},
            #{creater},
            #{state},
            #{createTime}
          ) ;
    </insert>

    <update id="update" parameterType="com.lld360.cnc.model.VodLecturer">
        UPDATE `vod_lecturer`
        SET  `state` = #{state}
        WHERE `user_id` = #{userId} ;
    </update>

    <select id="isVodLecturer" parameterType="long" resultType="boolean">
        SELECT COUNT(`user_id`) > 0 AS isLecturer
        FROM `vod_lecturer`
        WHERE `state` = 1 AND `user_id` = #{userId}
    </select>

    <select id="getByUserId" parameterType="long" resultType="com.lld360.cnc.model.VodLecturer">
        SELECT
          `user_id` userId,
          `creater`,
          `state`,
          `create_time` createTime
        FROM `vod_lecturer`
        WHERE `user_id` = #{userId}
    </select>

    <update id="setLecturerNull">
        UPDATE `vod_volumes`
        SET `lecturer_id` = 0
        WHERE `lecturer_id` = #{lecturerId};
    </update>

    <select id="getAllVodLecturer" resultType="com.lld360.cnc.model.User">
        SELECT
          u.*
        FROM `user` u
        JOIN `vod_lecturer` vl ON vl.`user_id` = u.`id`
        WHERE vl.`state` = 1
    </select>

</mapper>