<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lld360.cnc.repository.SoftCollectDao">

    <sql id="searchCondition">
        <where>
            <if test="userId != null">AND user_id = #{userId}</if>
            <if test="uuId != null">AND uuid = #{uuId}</if>
        </where>
    </sql>

    <sql id="columns">
        user_id, uuid, title, remark, create_time
	</sql>

    <select id="find" parameterType="map" resultType="com.lld360.cnc.model.SoftCollect">
        SELECT
        <include refid="columns"/>
        FROM soft_collect
        <include refid="searchCondition"/>
    </select>

    <select id="count" parameterType="map" resultType="long">
        SELECT count(1)
        FROM soft_collect dc
        JOIN soft_upload d ON dc.uuid = d.uuid
        <include refid="searchCondition"/>AND d.state != 9
    </select>

    <select id="isCollected" resultType="java.lang.Boolean">
        SELECT COUNT(1) > 0 AS isCollected from soft_collect WHERE user_id = #{userId} AND uuid = #{uuId}
    </select>

    <insert id="create" parameterType="com.lld360.cnc.model.SoftCollect">
        INSERT INTO soft_collect (
            user_id,
            uuid,
            title,
            remark,
            create_time
        ) VALUES (
            #{userId},
            #{uuId},
            #{title},
            #{remark},
            #{createTime}
        )
    </insert>

    <delete id="delete" parameterType="map">
        DELETE FROM soft_collect WHERE user_id = #{userId} AND uuid = #{uuId}
    </delete>

</mapper> 
