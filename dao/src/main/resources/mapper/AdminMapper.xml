<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lld360.cnc.repository.AdminDao">

    <!-- 通用查询结果列-->
    <sql id="columns">
        <![CDATA[
        a.`id`,
        a.`name`,
        a.`account`,
        a.`password`,
        a.`role_id`,
        a.`last_login`,
        a.`failed_times`,
        a.`status`,
        a.`salt`,
        r.id AS role_id,
        r.name AS role_name,
        r.role,
        r.permissions,
        r.description AS role_description
        ]]>
    </sql>

    <select id="findByAccount" parameterType="string" resultMap="adminMap">
        SELECT
        <include refid="columns"/>
        FROM admin a
        LEFT JOIN admin_role r ON a.role_id = r.id
        WHERE a.account = #{account}
    </select>

    <select id="findById" parameterType="long" resultMap="adminMap">
        SELECT
        <include refid="columns"/>
        FROM admin a
        LEFT JOIN admin_role r ON a.role_id = r.id
        WHERE a.id = #{id}
    </select>

    <update id="update" parameterType="com.lld360.cnc.model.Admin">
        UPDATE admin
        <set>
            <if test="name != null">`name` = #{name},</if>
            <if test="account != null">`account` = #{account},</if>
            <if test="password != null">`password` = #{password},</if>
            <if test="adminRole != null">`role_id` = #{adminRole.id},</if>
            <if test="lastLogin != null">`last_login` = #{lastLogin},</if>
            <if test="failedTimes != null">`failed_times` = #{failedTimes},</if>
            <if test="status != null">`status` = #{status},</if>
        </set>
        WHERE id = #{id};
    </update>

    <insert id="create" parameterType="com.lld360.cnc.model.Admin">
        INSERT INTO `admin` (
          `name`,
          `account`,
          `password`,
          `role_id`,
          `failed_times`,
          `status`,
          `salt`
        )
        VALUES
          (
            #{name},
            #{account},
            #{password},
            #{adminRole.id},
            #{failedTimes},
            #{status},
            #{salt}
          ) ;
    </insert>

    <delete id="delete" parameterType="long">
        DELETE FROM `admin` WHERE id = #{id}
    </delete>

    <select id="admins" resultMap="adminMap">
        SELECT
        <include refid="columns"/>
        FROM admin a
        LEFT JOIN admin_role r ON a.role_id = r.id
        WHERE a.role_id != 1
    </select>

    <update id="freezeAdmin" parameterType="com.lld360.cnc.model.Admin">
        UPDATE admin
        SET `status` = 2
        WHERE id = #{id};
    </update>

    <update id="updateStatus" parameterType="com.lld360.cnc.model.Admin">
        UPDATE `admin`
        SET
          `failed_times` = 0,
          `status` = #{status}
        WHERE id = #{id};
    </update>

    <update id="unfreezeAllAdmin">
        UPDATE `admin`
        SET
        `failed_times` = 0,
        `status` = 1
        WHERE `status` = 2;
    </update>

    <select id="noSaltAdmins" resultMap="adminMap">
        SELECT
        <include refid="columns"/>
        FROM admin a
        LEFT JOIN admin_role r ON a.role_id = r.id
        WHERE a.salt IS NULL
    </select>

    <!-- 结果集mapper -->
    <resultMap id="adminMap" type="com.lld360.cnc.model.Admin">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="account" column="account"/>
        <result property="password" column="password"/>
        <result property="lastLogin" column="last_login"/>
        <result property="failedTimes" column="failed_times"/>
        <result property="status" column="status"/>
        <result property="salt" column="salt"/>
        <association property="adminRole" javaType="com.lld360.cnc.model.AdminRole">
            <id property="id" column="role_id"/>
            <result property="name" column="role_name"/>
            <result property="role" column="role"/>
            <result property="permissions" column="permissions"/>
            <result property="description" column="role_description"/>
        </association>
    </resultMap>

</mapper>