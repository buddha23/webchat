<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lld360.cnc.repository.UserPointDao">

    <sql id="columns">
        user_id userId,
        total_point totalPoint,
        total_in totalIn,
        total_out totalOut
    </sql>

    <sql id="searchCondition">
        <where>
            <if test="userId != null">AND user_id = #{userId}</if>
            <if test="totalPoint != null">AND total_point = #{totalPoint}</if>
            <if test="totalIn != null">AND total_in = #{totalIn}</if>
            <if test="totalOut != null">AND total_out = #{totalOut}</if>
        </where>
    </sql>

    <select id="search" parameterType="map" resultType="com.lld360.cnc.model.UserPoint">
        SELECT
        <include refid="columns"/>
        FROM `user_point`
        <include refid="searchCondition"/>
        <if test="limit != null and offset != null">LIMIT #{limit} OFFSET #{offset}</if>
    </select>

    <select id="count" parameterType="map" resultType="long">
        SELECT count(1)
        FROM `user_point`
        <include refid="searchCondition"/>
    </select>

    <select id="find" parameterType="long" resultType="com.lld360.cnc.model.UserPoint">
        SELECT
        <include refid="columns"/>
        FROM `user_point`
        WHERE user_id = #{userId}
    </select>

    <insert id="create" parameterType="com.lld360.cnc.model.UserPoint">
        INSERT INTO `user_point` (
            user_id,
            total_point,
            total_in,
            total_out
        ) VALUES (
            #{userId},
            #{totalPoint},
            #{totalIn},
            #{totalOut}
        )
    </insert>

    <update id="update" parameterType="com.lld360.cnc.model.UserPoint">
        UPDATE user_point
        <set>
            <if test="totalScore != null">total_score = #{totalScore},</if>
            <if test="totalIn != null">total_in = #{totalIn},</if>
            <if test="totalOut != null">total_out = #{totalOut},</if>
        </set>
        WHERE user_id = #{userId}
    </update>

    <update id="updatePoint">
        UPDATE user_point
        SET total_point = total_point+(#{point})
        <if test="point &gt; 0">,total_in = total_in+#{point}</if>
        <if test="point &lt; 0">,total_out = total_out+ABS(#{point})</if>
        WHERE user_id = #{userId}
    </update>

</mapper>