<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lld360.cnc.repository.SettingDao">

    <!-- 通用查询结果列-->
    <sql id="baseColumns">
        id, lable, `name`, `content`, description
    </sql>
    <insert id="insert" parameterType="com.lld360.cnc.model.Setting" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        INSERT INTO setting (`name`, lable, `content`, description)
        VALUES (#{name}, #{lable}, #{content}, #{description})
    </insert>

    <select id="find" parameterType="string" resultType="com.lld360.cnc.model.Setting">
        SELECT
        <include refid="baseColumns"/>
        FROM setting
        WHERE `name` = #{name}
    </select>

    <select id="search" resultType="com.lld360.cnc.model.Setting">
        SELECT
        <include refid="baseColumns"/>
        FROM setting
    </select>

    <update id="update" parameterType="com.lld360.cnc.model.Setting">
        UPDATE setting
        SET
        <if test="lable != null">lable = #{lable},</if>
        <if test="description != null">description = #{description},</if>
        `content` = #{content}
        WHERE `name` = #{name}
    </update>

    <delete id="delete" parameterType="string">
        DELETE FROM setting WHERE `name`=#{name}
    </delete>
</mapper>