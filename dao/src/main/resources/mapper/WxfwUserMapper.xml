<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lld360.cnc.repository.WxfwUserDao">

    <sql id="columns">
      `id`,
      `openid`,
      `unionid`,
      `create_time`,
      `update_time`
    </sql>

    <sql id="searchCondition">
        <where>
            <if test="openid != null">AND openid = #{openid}</if>
            <if test="unionid != null">AND unionid = #{unionid}</if>
        </where>
    </sql>

    <insert id="create" parameterType="com.lld360.cnc.model.WxfwUser">
        INSERT INTO `wxfw_user` (
          `id`,
          `openid`,
          `unionid`,
          `create_time`,
          `update_time`
        )
        VALUES
          (
            #{id},
            #{openid},
            #{unionid},
            #{createTime},
            #{updateTime}
          ) ;
    </insert>

    <update id="update" parameterType="com.lld360.cnc.model.WxfwUser">
        UPDATE `wxfw_user`
        SET
          `openid` = #{openid},
          `unionid` = #{unionid},
          `update_time` = #{updateTime}
        WHERE `id` = #{id} ;
    </update>

    <update id="updateByOpenid" parameterType="com.lld360.cnc.model.WxfwUser">
        UPDATE `wxfw_user`
        SET
        `unionid` = #{unionid},
        `update_time` = #{updateTime}
        WHERE `openid` = #{openid};
    </update>

    <select id="search" parameterType="map" resultMap="wxfwUserMap">
        SELECT
        <include refid="columns"/>
        FROM `wxfw_user`
        <include refid="searchCondition"/>
        <if test="limit != null and offset != null">LIMIT #{limit} OFFSET #{offset}</if>
    </select>

    <select id="count" parameterType="map" resultType="long">
        SELECT count(1)
        FROM `wxfw_user`
        <include refid="searchCondition"/>
    </select>

    <select id="getLastUser" resultMap="wxfwUserMap">
        SELECT
        <include refid="columns"/>
        FROM `wxfw_user`
        ORDER BY `id` DESC
        LIMIT 1
    </select>

    <select id="searchNoUnionUser" resultMap="wxfwUserMap">
        SELECT
        <include refid="columns"/>
        FROM `wxfw_user`
        WHERE `unionid` IS NULL
    </select>

    <resultMap id="wxfwUserMap" type="com.lld360.cnc.model.WxfwUser">
        <id property="id" column="id"/>
        <result property="openid" column="openid"/>
        <result property="unionid" column="unionid"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

</mapper>